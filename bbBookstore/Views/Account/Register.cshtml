@using bbBookstore.Data.ViewModels;

@model RegisterVM;

@{
    ViewData["Title"] = "Sign Up";
}


<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<section class="login">
    <div class="container py-2 text-center text-white">
        <div class="row no-gutters">

@if (TempData["Error"] != null)
{
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> @TempData["Error"]</span>
            </div>
}

            <div class="col-lg-4">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://www.bestghostwriters.net/wp-content/themes/essay-niche/images/service-page/top-screen.png" class="d-block mw-100" alt="..." style="height: 600px; width: 385px;">
                    </div>
                </div>
            </div>

                <div class="col-lg-8 py-3 background">
                <img src="https://static.vecteezy.com/system/resources/previews/000/574/512/original/vector-sign-of-user-icon.jpg" style="width:75px; height:75px;">
                <div class="row">
                    <div class="col-lg-7 mx-auto">
                        <h1>REGISTER</h1>
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row py-3">
                                <div class="col-lg-12">
                            <input asp-for="FullName" class="form-control col-md-8" placeholder="Full Name" autofocus/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="form-row py-3">
                                <div class="col-lg-12">
                            <input asp-for="EmailAddress" class="form-control col-md-8" placeholder="Email Address (user@bbBookstore.com)"/>
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="form-row py-3">
                                <div class="col-lg-12">
                            <input asp-for="Password" class="form-control col-md-8" placeholder="Password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="form-row py-3">
                                <div class="col-lg-12">
                            <input asp-for="ConfirmPassword" class="form-control col-md-8" placeholder="Confirm Password"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="form-group">
                        <input class="btn1 mb-3 mt-4" type="submit" value="Register" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>