@model Author

@{
    ViewData["Title"] = "Remove the Author";
}

<div class="row text">
    <div class="text-center">
        <h1>Delete Confirmation For @Model.FirstName @Model.LastName</h1>
    </div>

    <div class="col-md-6 offset-md-3">
        <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                <img class="img-thumbnail" style="max-width: 200px; max-height: 250px;" id="ProfileImagePreview" />
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label mt-2 mb-1"></label>
                    <input asp-for="ProfileImage" class="form-control" readonly/>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label mt-2 mb-1"></label>
                    <input asp-for="FirstName" class="form-control" readonly />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label mt-2 mb-1"></label>
                    <input asp-for="LastName" class="form-control" readonly />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Background" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Background" class="form-control" readonly />
                    <span asp-validation-for="Background" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Authors</a>
                </div>
        </div>
    </div>

    @section Scripts {
        <script>

            $(document).ready(function () {
                var output = document.getElementById('ProfileImagePreview');
                output.src = $("#ProfileImage").val();
            })
        </script>
    }
