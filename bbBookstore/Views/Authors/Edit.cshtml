@model Author

@{
    ViewData["Title"] = "Update the Author";
}

<div class="row text">
    <div class="text-center">
        <h1>Update the Author</h1>
    </div>

    <div class="col-md-6 offset-md-3">
        <div class="col-md-8 offset-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="ProfileImagePreview" class="img-thumnail" style="max-width: 150px; max-height: 200px;" />
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label mt-2 mb-1"></label>
                    <input asp-for="ProfileImage" class="form-control" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label mt-2 mb-1"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label mt-2 mb-1"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Background" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Background" class="form-control" />
                    <span asp-validation-for="Background" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Update" class="btn btn-outline-success float-right" asp-route-id="@Model.Id" /> |
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Authors</a>
                </div>
            </form>
        </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function() {
                var output = document.getElementById('ProfileImagePreview');
                output.src = $("#ProfileImage").val();
        })

        $("#ProfileImage").on("change", function () {
                var output = document.getElementById('ProfileImagePreview');
                output.src = $(this).val();
        })
    </script>
}