@using bbBookstore.Data.ViewModels;

@model LoginVM;

@{
    ViewData["Title"] = "Log In To B&B-Bookstore!";
}

<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<section class="login">
    <div class="container py-2 text-center text-white">
        <div class="row no-gutters">

            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> @TempData["Error"]</span>
                </div>
            }

            <div class="col-lg-4">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://i.pinimg.com/originals/11/cf/3a/11cf3a9113f5515dccc54ce3a3661c49.jpg" class="d-block mw-100" alt="..." style="border-top-left-radius: 25px; border-bottom-right-radius: 25px;">
                    </div>
                </div>
            </div>

            <div class="col-lg-8 py-4 background">
                <img src="https://static.vecteezy.com/system/resources/previews/000/574/512/original/vector-sign-of-user-icon.jpg" style="width:75px; height:75px;">
                <div class="row">
                    <div class="col-lg-7 mx-auto">
                        <h1>LOGIN TO THE APP</h1>
                        <p><em>Welcome Back!</em></p>
                        <form class="pt-2" asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-row py-1">
                                <div class="col-lg-12">
                                    <input type="email" asp-for="EmailAddress" class="form-control" placeholder="Email Address" autofocus />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-row py-3">
                                <div class="col-lg-12">
                                    <input asp-for="Password" type="password" name="password" placeholder="********************" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <input class="btn1 mb-3 mt-4" type="submit" value="LOGIN" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
