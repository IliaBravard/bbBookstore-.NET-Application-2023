@model Publisher

@{
    ViewData["Title"] = "Remove the Publisher";
}

<div class="row text">
    <div class="text-center">
        <h1>Delete Confirmation For @Model.Name</h1>
    </div>

    <div class="col-md-6 offset-md-3">
        <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="Name" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Country" class="form-control" readonly />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Year" class="form-control" readonly />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Authors</a>
                </div>
        </div>
    </div>
