@model Publisher

@{
    ViewData["Title"] = "Update the Publisher";
}

<div class="row text">
    <div class="text-center">
        <h1>Update the Publisher</h1>
    </div>

    <div class="col-md-6 offset-md-3">
        <div class="col-md-8 offset-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year" class="control-label mt-2 mb-1"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Update" class="btn btn-outline-success float-right" asp-route-id="@Model.Id" /> |
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Authors</a>
                </div>
            </form>
        </div>
</div>