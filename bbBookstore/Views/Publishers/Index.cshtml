@model IEnumerable<Publisher>

@{
    ViewData["Title"] = "Publishers";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table table-hover">
            <thad>
                <tr style="background-color: #0774a3; color: white; font-size: 20px;" class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Country)</th>
                    <th>@Html.DisplayNameFor(model => model.Year)</th>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thad>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle text-center">
                                <a class="btn btn-outline-success" data-toggle="tooltip" title="Update" style="width: 100px" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                                <a class="btn btn-outline-dark" data-toggle="tooltip" title="View Details" style="width: 100px" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                                <a class="btn btn-outline-danger" data-toggle="tooltip" title="Remove" style="width: 100px" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Publishers")